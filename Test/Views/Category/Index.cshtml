@model List<Category>

@{
    ViewBag.Title = "Categories";
}

<div class="container mt-5">
    <!-- Back Button -->
    <a href="@Url.Action("Index", "Home")" class="btn btn-info mb-4">
        <i class="bi bi-arrow-left"></i> Back to Home
    </a>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Categories</h2>
        <a href="/Category/Create" class="btn btn-primary">Add Category</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No categories found. Click "Add Category" to create one!
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <a href="/Category/Edit?Id=@category.Id" class="btn btn-warning btn-sm me-2">Update</a>
                            <a href="/Category/Delete?Id=@category.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
