@model IEnumerable<Models.Product>

@{
    ViewData["Title"] = "Best Seller Product List";
}

<div class="container my-4">
    <h2 class="text-center text-primary">@ViewData["Title"]</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="~/Images/@product.ImageUrl"
                         class="card-img-top"
                         alt="@product.Name"
                         style="width: 100%; height: 200px; object-fit: contain; background-color: #f8f9fa;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="text-success font-weight-bold">Price: $@product.Price</p>
                        <p>Stock: @product.Stock</p>
                        <p>Rating: @product.Rating / 5</p>
                        <div class="d-flex justify-content-start align-items-center mb-2">
                            <span class="badge badge-custom">Best Seller</span>
                        </div>
                        <a href="/Product/Details/@product.Id" class="btn btn-primary mt-2">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .badge-custom {
        background-color: #ffc107;
        color: #212529;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        border-bottom: 1px solid #dee2e6;
    }
</style>
