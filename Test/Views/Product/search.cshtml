@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e6e6fa; /* Light lavender background */
        }

        .container {
            max-width: 1200px; /* Increased container width */
        }

        .no-results {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 50vh;
            color: #555;
            text-align: center;
        }

        .no-results-icon {
            font-size: 50px;
            color: #dc3545; /* Red color for warning */
        }

        .card {
            width: 28rem; /* Increased card width */
            background-color: #f8f9fa; /* Light gray background for card */
            border: 1px solid #dcdcdc;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Added subtle shadow */
        }

        .card-title {
            color: #333;
        }

        .btn-primary {
            background-color: #6a5acd; /* Slate blue for button */
            border-color: #6a5acd;
        }

        .btn-primary:hover {
            background-color: #483d8b; /* Darker slate blue on hover */
            border-color: #483d8b;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">Search Results</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="no-results">
                <div class="no-results-icon">🔍</div>
                <p class="fs-4 mt-3">No products found. Please try a different search.</p>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <div class="card">
                            <img src="~/images/@item.ImageUrl" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                                <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                                <a href="/product/Details?Id=@item.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</body>
</html>
