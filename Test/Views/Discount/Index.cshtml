@model IEnumerable<Discount>

@{
    ViewData["Title"] = "Discounts List";
}

<style>
    body {
        background-color: #f4f7fc;
        font-family: 'Arial', sans-serif;
    }

    .container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
    }

    h1 {
        color: #3e64a5;
        font-size: 36px;
        margin-bottom: 30px;
        text-align: center;
        font-weight: bold;
    }

    .btn {
        border-radius: 25px;
        padding: 12px 20px;
        font-size: 14px;
        font-weight: bold;
        margin-top: 15px;
        text-transform: uppercase;
        display: inline-block;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 18px;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
            font-size: 16px;
        }

        .table thead {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #fafbfc;
    }

    .table tbody tr:hover {
        background-color: #f1f3f5;
    }

    .table td {
        vertical-align: middle;
    }

    .text-center {
        text-align: center;
    }

    .no-discount {
        font-size: 18px;
        color: #888;
        text-align: center;
        padding-top: 40px;
    }

</style>

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <!-- Back Button -->
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>

    @if (!Model.Any())
    {
        <p class="no-discount">No discount available</p>
    }
    else
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Discount Rate</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Usage Limit</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discount in Model)
                {
                    <tr>
                        <td>@discount.Name</td>
                        <td>@discount.DiscountRate%</td>
                        <td>@discount.StartDate.ToShortDateString()</td>
                        <td>@discount.EndDate.ToShortDateString()</td>
                        <td>@discount.CouponCounter</td>
                        <td>@discount.Status</td>
                        <td>
                            <!-- Action Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Actions
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="@Url.Action("Details", "Discount", new { id = discount.Id })">Details</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Edit", "Discount", new { id = discount.Id })">Edit</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Delete", "Discount", new { id = discount.Id })">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="@Url.Action("Create", "Discount")" class="btn btn-success">Create New Discount</a>
</div>
