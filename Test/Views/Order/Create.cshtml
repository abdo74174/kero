@model Order

@{
    ViewBag.Title = "Create Order";
}

<h1 class="text-center text-primary mb-4">Create Order</h1>

<form asp-action="Create" method="post" style="max-width: 600px; margin: 0 auto; background-color: #f9f9f9; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="form-group">
        <input type="hidden" asp-for="UserId" class="form-control" value="@Model.UserId" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="TotalAmount" class="control-label text-dark">Total Amount</label>
        <input asp-for="TotalAmount" class="form-control" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px;" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ShippingAddress" class="control-label text-dark">Shipping Address</label>
        <textarea asp-for="ShippingAddress" class="form-control" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px;"></textarea>
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" style="width: 120px; border-radius: 25px;">Create</button>
        <a href="@Url.Action("Index", "Order")" class="btn btn-secondary" style="width: 120px; border-radius: 25px;">Back</a>
    </div>
</form>
