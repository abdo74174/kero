@model OrderItem
@{
    ViewData["Title"] = "Edit Order Item";
}

<div class="container mt-5" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px;">
    <h2 class="text-center mb-4" style="color: #ffc107;">Edit Order Item</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
           
            <input asp-for="OrderId" class="form-control" style="border: 2px solid #ffc107;" type="hidden" />
        </div>

        <div class="form-group mb-3">
            
            <input asp-for="ProductId" class="form-control" style="border: 2px solid #ffc107;" type="hidden" />
        </div>

        <div class="form-group mb-3">
            <label for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" class="form-control" style="border: 2px solid #ffc107;" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="UnitPrice" class="form-label">Unit Price</label>
            <input asp-for="UnitPrice" class="form-control" style="border: 2px solid #ffc107;" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a href="/OrderItem" class="btn btn-secondary">Cancel</a>
    </form>
</div>
