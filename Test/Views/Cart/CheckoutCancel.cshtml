@* Views/BookingTicket/PaymentCanceled.cshtml *@
@{
    ViewData["Title"] = "Payment Canceled";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Canceled</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv3vL1pY6cBYj6p2pHqZoFqF8L00F4dO2A19oYYZhhp9dGvJ8fNEs8ttddf9" crossorigin="anonymous">
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card text-center shadow-lg" style="max-width: 600px;">
            <div class="card-header bg-danger text-white fs-3">
                <i class="bi bi-x-circle fs-1"></i> Payment Canceled
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    Unfortunately, your payment could not be completed. If this was a mistake, please try again.
                </div>
                <a href="/Cart/Index" class="btn btn-danger">Return to Cart</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
</body>
</html>
