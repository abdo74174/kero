@model List<Models.Order>

@{
    ViewData["Title"] = "User Orders";
}

<!-- Back Button -->
<a href="@Url.Action("Index", "User")" class="btn btn-info mb-4">
    <i class="bi bi-arrow-left"></i> Back to User List
</a>

<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No orders found for this user.
    </div>
}
else
{
    <table class="table table-hover table-bordered table-striped">
        <thead style="background-color: #007bff; color: white;">
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User.UserName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-primary btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
