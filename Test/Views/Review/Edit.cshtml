@model Models.Review
@{
    ViewData["Title"] = "Edit Review";
}

<head>
    <style>
        .form-container {
            padding-top: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .container {
            padding-top: 30px;
        }
    </style>
</head>

<div class="container form-container">
    <h2>Edit Review</h2>
    <form asp-action="Edit">
        <div class="form-group">
            <label for="Rating" class="form-label">Rating</label>
            <input type="number" name="Rating" class="form-control" min="1" max="5" value="@Model.Rating" required />
        </div>
        <div class="form-group">
            <label for="Comment" class="form-label">Comment</label>
            <textarea name="Comment" class="form-control" rows="3">@Model.Comment</textarea>
        </div>
        <button type="submit" class="btn btn-warning">Update Review</button>
    </form>
</div>
